
<div class="container">
  <div class="row justify-content-left">
      <h1>Article list</h1>

      <ul class="ul-strip">
          <% @articles.each do |article| %>
          <div class="border">
            <li><%= link_to article.title, article_path(article) %></li>
            <li><%= article.content %></li>
          </div>
          <% end %>
      </ul>

      <%= link_to 'Create an article', articles_new_path, class: "btn btn-primary" %>
  </div>
</div>
